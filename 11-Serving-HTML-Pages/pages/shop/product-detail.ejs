<%- include('../includes/head.ejs')  %>
<link rel="stylesheet" href="/css/detail.css">
</head>

<body>
    <%- include('../includes/main-header.ejs')  %>
    <main class="__main">
        <div class="__product__detail">
            <img src="<%= prod.imageUrl  %>" alt="<%= prod.title  %>" id="__main__img">
            <div class="__info">
                <h2 class="__title"><%= prod.title  %></h2>
                <div class="__price">
                    <span>
                        R$
                    </span>
                    <div class="__price__value">
                        <%= prod.price  %>
                    </div>
                </div>
                <div class="__description">
                    <p>
                        <%= prod.description  %>
                    </p>
                </div>
                <a href="/cart/<%= prod.id  %>" class="__add">Add to cart</a>
            </div>
        </div>
    </main>

<% include('../includes/end.ejs') %>